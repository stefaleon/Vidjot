{{#each ideas}}
<!-- if there are ideas -->
  <div class="card card-body m-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <p class="blockquote-footer">Added on {{date}}
    <a class="btn btn-dark btn-block mt-4" href="/ideas/edit/{{id}}">Edit</a>
  </div>
{{else}}
<!-- else display message -->
  <h3>No ideas listed.</h3>
{{/each}}
